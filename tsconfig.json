{
  "compilerOptions": {
    "lib": ["es2015", "dom", "esnext.asynciterable"],
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
